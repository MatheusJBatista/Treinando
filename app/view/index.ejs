                    <li class="page-item <%=estilo%>"><a class="page-link" href="?paginacao=<%=i%>"><%=i%></a></li>
                    <%}%>

                    <!--Arrow right-->
                    <li class="page-item active">
                      <a class="page-link" aria-label="Next" href="?paginacao=<%=queryPagina+1%>">
                        <span aria-hidden="true">&raquo;</span>
