<!DOCTYPE html>
<html lang="pt-br" dir="ltr">
  <head>
    <% include include/head.ejs %>
    <link rel="stylesheet" href="/css/login.css">
  </head>
  <body class="body">
    <div class="container">
      <div class="dentro">
        <div class="meio">
          <img src="img/noticia.png" alt="LogoNoticia" class="imgLogoNoticia">
        </div>
        <div class="meio">
          <div class="frescurinha">
            <div class="meio" style="padding-bottom:4%;padding-top:2%;">
                <div class="loginEsquerdo bordaLogin">
                  <h3>Login</h3>
                </div>
                <div class="bordaMeio"></div>
                <div class="registrarDireito">
                  <a href="register" class="noFrescura"><h3>Cadastro</h3></a>
                </div>
            </div>
            <div class="form-itens">
              <form action="/postLogin" method="post">
                <div class="form-group">
                  <% if(error) {%>
                  <div class="alert alert-danger">
                      <strong>Atenção</strong>
                      <ul>
                          <% for(var i = 0; i< error.length; i++){%>
                            <li>
                              <%= error[i].msg%>
                            </li>
                          <%}%>
                      </ul>
                    </div>
                    <%}%>
                  <input type="text" class="form-control" name="txtUsuario" placeholder="Usuário">
                </div>
                <div class="form-group">
                  <input class="form-control" size="40%" type="password" name="txtSenha" placeholder="Password">
                </div>
                <a href="#" class="forgotPassword"><p align="right" class="font-italic">Esqueci minha senha</p></a>
                <button type="submit" name="btnEnviar" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
