<!DOCTYPE html>
<html lang="pt-br" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <% include include/head.ejs %>
  </head>
  <body>
    <div class="container">
      <div class="d-flex justify-content-center">
        <img src="img/noticia.png" alt="LogoNoticia" class="imgLogoNoticia">
      </div>
      <div class="d-flex justify-content-center">
        <div class="col-md-4">
          <div class="frescurinha">
            <div class="meio" style="padding-bottom:4%;padding-top:2%;">
                <div class="loginEsquerdo">
                  <a href="login" class="noFrescura"><h3>Login</h3></a>
                </div>
                <div class="bordaMeio"></div>
                <div class="registrarDireito bordaLogin">
                  <h3>Cadastro</h3>
                </div>
            </div>
              <div class="form-itens">
              <form action="/postRegister" method="post">
                <% if(error){%>
                  <div class="alert alert-danger">
                    <strong>Atenção</strong>
                    <ul>
                      <% for(var i=0; i< error.length ; i++) {%>
                        <li>
                          <%= error[i].msg %>
                        </li>
                      <%}%>
                    </ul>
                  </div>
                <%}%>
                <div class="form-group">
                  <input type="email" name="txtEmail" value="<%=dadosForm.txtEmail%>" class="form-control" placeholder="E-mail">
                </div>
                <div class="form-group">
                  <input type="email" name="txtEmailConfirm" value="<%=dadosForm.txtEmailConfirm%>" class="form-control" placeholder="Redigite o E-mail">
                </div>
                <div class="form-group">
                  <input type="text" name="txtUsername" value="<%=dadosForm.txtUsername%>" class="form-control" placeholder="Digite um usuário">
                </div>
                <div class="form-group">
                  <input type="password" name="txtPassword" placeholder="Crie uma Senha" class="form-control">
                </div>
                <div class="form-group">
                  <input type="password" name="txtPasswordConfirm" placeholder="Redigite a Senha" class="form-control">
                </div>
                <button type="submit" name="btnSalvar" class="btn btn-primary">Registrar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
